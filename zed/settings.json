// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
  "agent": {
    "default_model": {
      "provider": "ollama",
      "model": "deepseek-r1:14b"
    }
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "language_models": {
    "ollama": {
      "api_url": "http://localhost:11434",
      "available_models": [
        {
          "name": "deepseek-r1:14b",
          "display_name": "deepseek-r1:14b",
          "max_tokens": 32768
        },
        {
          "name": "mistral:latest",
          "display_name": "mistral:latest",
          "max_tokens": 32768
        },
        {
          "name": "gemma3:4b",
          "display_name": "gemma3:4b",
          "max_tokens": 32768
        },
        {
          "name": "qwen3:latest",
          "display_name": "qwen3:latest",
          "max_tokens": 32768
        },
        {
          "name": "llama3.2:latest",
          "display_name": "llama3.2:latest",
          "max_tokens": 32768
        },
        {
          "name": "qwen2.5vl:7b",
          "display_name": "qwen2.5vl:7b",
          "max_tokens": 32768
        },
        {
          "name": "mistral-small3.1:24b",
          "display_name": "mistral-small3.1:24b",
          "max_tokens": 32768
        },
        {
          "name": "llama3.2-vision:latest",
          "display_name": "llama3.2-vision:latest",
          "max_tokens": 32768
        }
      ]
    }
  },
  "outline_panel": {
    "dock": "right"
  },
  "project_panel": {
    "dock": "left"
  },
  "tab_bar": {
    "show": true
  },
  "relative_line_numbers": true,
  "preferred_line_length": 120,
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "Ros√© Pine",
    "dark": "Tokyo Night"
  },
  "lsp": {
    "rust-analyzer": {
      "binary": {
        "ignore_system_version": true
      }
    }
  },
  "languages": {
    "Markdown": {
      "soft_wrap": "preferred_line_length"
    },
    "Rust": {
      "soft_wrap": "preferred_line_length",
      "format_on_save": "language_server",
      "language_servers": ["rust-analyzer", "slcs"]
    },
    "Python": {
      "language_servers": ["ruff", "pyright"],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.fixAll.ruff": true,
            "source.organizeImports.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  }
}
