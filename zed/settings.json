// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
  "agent": {
    "default_model": {
      "provider": "ollama",
      "model": "deepseek-r1:latest"
    },
    "version": "2"
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "language_models": {
    "ollama": {
      "api_url": "http://localhost:11434",
      "available_models": [
        {
          "name": "deepseek-r1:70b",
          "display_name": "deepseek-r1:70b",
          "max_tokens": 32768
        },
        {
          "name": "deepseek-r1:latest",
          "display_name": "deepseek-r1:latest",
          "max_tokens": 32768
        },
        {
          "name": "ollama3.1",
          "display_name": "ollama3.1",
          "max_tokens": 32768
        },
        {
          "name": "ollama3.2-vision",
          "display_name": "ollama3.2-vision",
          "max_tokens": 32768
        },
        {
          "name": "ollama3.2",
          "display_name": "ollama3.2",
          "max_tokens": 32768
        },
        {
          "name": "qwen2.5-coder",
          "display_name": "qwen 2.5 coder 32K",
          "max_tokens": 32768
        }
      ]
    }
  },
  "outline_panel": {
    "dock": "right"
  },
  "project_panel": {
    "dock": "left"
  },
  "tab_bar": {
    "show": true
  },
  "relative_line_numbers": true,
  "preferred_line_length": 120,
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "Ros√© Pine",
    "dark": "Tokyo Night"
  },
  "lsp": {
    "rust-analyzer": {
      "binary": {
        "ignore_system_version": true
      }
    }
  },
  "languages": {
    "Markdown": {
      "soft_wrap": "preferred_line_length"
    },
    "Rust": {
      "soft_wrap": "preferred_line_length",
      "format_on_save": "language_server",
      "language_servers": ["rust-analyzer", "slcs"]
    }
  }
}
