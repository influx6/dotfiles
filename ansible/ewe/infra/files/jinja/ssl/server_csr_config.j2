[req]
default_bits = 2048
prompt = no
default_md = sha256
req_extensions = req_ext
distinguished_name = dn

[dn]
C = HK
ST = DB
L = NT Territories
O = PrivateDEV
OU = Private Dev
CN = {{ subject_name }}

[req_ext]
subjectAltName = @alt_names

[alt_names]
{% for address in dns_addresses %}
DNS.{{ loop.index }} = {{ address }}
{% endfor %}
{% for address in server_addresses %}
IP.{{ loop.index }} = {{ address }}
{% endfor %}
