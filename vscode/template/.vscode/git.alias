gtbr() {
	echo "Running git checkout "$@" "
	git checkout -b "$@"
	echo "Running git push --set-upstream origin "$@""
	git push --set-upstream origin "$@"
}

bash_cla() {
	IFS=' '
	read -ra ADDR <<< "$@"
	for i in "${ADDR[@]}"; do
		git clone "$i"
	done
	IFS=' '
}

zsh_cla() {
	links="$@"
	ADDR=("${(@s/ /)links}")
	for i in "${ADDR[@]}"; do
		git clone "$i"
	done
}

gcla() {
 	if [ "$BASH_VERSION" != "" ]; then
		bash_cla $*
	fi
 	if [ "$ZSH_VERSION" != "" ]; then
		zsh_cla $*
	fi
}



